@page
@model YurttaYe.WebApi.Pages.Admin.Auth.LoginModel
@{
    ViewData["Title"] = "Admin Login";
}

<div class="container mx-auto p-4">
    <h2 class="text-2xl font-bold mb-4">Admin Giriş</h2>
    <form method="post" class="max-w-md">
        <div class="mb-4">
            <label asp-for="Username" class="block text-sm font-medium"></label>
            <input asp-for="Username" class="mt-1 block w-full border rounded p-2" />
            <span asp-validation-for="Username" class="text-red-500"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Password" class="block text-sm font-medium"></label>
            <input asp-for="Password" type="password" class="mt-1 block w-full border rounded p-2" />
            <span asp-validation-for="Password" class="text-red-500"></span>
        </div>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="text-red-500 mb-4">@Model.ErrorMessage</div>
        }
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Giriş Yap</button>
    </form>
</div>