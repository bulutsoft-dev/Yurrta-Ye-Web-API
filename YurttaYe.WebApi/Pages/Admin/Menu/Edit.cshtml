// src/YurttaYe.WebApi/Pages/Admin/Menu/Edit.cshtml
@page
@model YurttaYe.WebApi.Pages.Admin.Menu.EditModel
@{
    ViewData["Title"] = "Edit Menu Item";
}

<h1>Edit Menu Item</h1>

<form method="post">
    <input type="hidden" asp-for="MenuItem.Id" />
    <div class="form-group">
        <label asp-for="MenuItem.Name"></label>
        <input asp-for="MenuItem.Name" class="form-control" />
        <span asp-validation-for="MenuItem.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MenuItem.Category"></label>
        <select asp-for="MenuItem.Category" class="form-control">
            <option value="Çorba">Çorba</option>
            <option value="Ana Yemek">Ana Yemek</option>
            <option value="Yan Yemek">Yan Yemek</option>
            <option value="Salata/Tatlı">Salata/Tatlı</option>
            <option value="Ek Ürün">Ek Ürün</option>
        </select>
        <span asp-validation-for="MenuItem.Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MenuItem.GramajValue"></label>
        <input asp-for="MenuItem.GramajValue" class="form-control" />
        <span asp-validation-for="MenuItem.GramajValue" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MenuItem.GramajUnit"></label>
        <select asp-for="MenuItem.GramajUnit" class="form-control">
            <option value="g">g</option>
            <option value="ml">ml</option>
        </select>
        <span asp-validation-for="MenuItem.GramajUnit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MenuItem.PriceValue"></label>
        <input asp-for="MenuItem.PriceValue" class="form-control" />
        <span asp-validation-for="MenuItem.PriceValue" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MenuItem.PriceCurrency"></label>
        <input asp-for="MenuItem.PriceCurrency" class="form-control" />
        <span asp-validation-for="MenuItem.PriceCurrency" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MenuItem.CalorieValue"></label>
        <input asp-for="MenuItem.CalorieValue" class="form-control" />
        <span asp-validation-for="MenuItem.CalorieValue" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</form>

