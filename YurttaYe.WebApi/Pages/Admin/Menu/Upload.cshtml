@page
// src/YurttaYe.WebApi/Pages/Admin/Menu/Upload.cshtml
@model YurttaYe.WebApi.Pages.Admin.Menu.UploadModel
@{
    ViewData["Title"] = "Upload Menu File";
}

<h1>Upload Menu File</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Select PDF or Excel File</label>
        <input type="file" id="file" name="file" class="form-control" accept=".pdf,.xlsx" />
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</form>

@if (Model.Message != null)
{
    <div class="alert @(Model.Success ? "alert-success" : "alert-danger")">
        @Model.Message
    </div>
}


    <script>
        document.querySelector('form').addEventListener('submit', function (e) {
            var fileInput = document.querySelector('#file');
            if (!fileInput.files.length) {
                e.preventDefault();
                alert('Please select a file.');
            }
        });
    </script>
